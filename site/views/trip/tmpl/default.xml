                                name="center_lon"
                                type="text"
                                label="CENTER_LON"
                                description="CENTER_LON_DESC"
                                default="0.0"/>
                </fieldset>
        </fields>
	<state>
		<name>trip</name>
		<description>Display the trip section</description>
		<url/>
		<params>
			<param name="center_lat" type="text" default="0.0" label="Latitude du centre" description="Latitude du centre de la carte"/>
			<param name="center_lon" type="text" default="0.0" label="Longitude du centre" description="Longitude du centre de la carte"/>
		</params>
	</state>
</metadata>