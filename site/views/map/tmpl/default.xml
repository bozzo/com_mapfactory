        <fieldset name="request" >

            <field
                name="center_lat"
                default="0.0"
                description="CENTER_LAT_DESC"
                label="CENTER_LAT"
                type="text" />

            <field
                name="center_lon"
                default="0.0"
                description="CENTER_LON_DESC"
                label="CENTER_LON"
                type="text" />
        </fieldset>
    </fields> -->

    <state>

        <name>
Default Map
        </name>

        <description>
Display the default map
        </description>

        <url />

        <params>

            <param
                name="center_lat"
                default="0.0"
                description="Latitude du centre de la carte"
                label="Latitude du centre"
                type="text" />

            <param
                name="center_lon"
                default="0.0"
                description="Longitude du centre de la carte"
                label="Longitude du centre"
                type="text" />
        </params>
    </state>

</metadata>